<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DashBoard">
    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="SignUp"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/line"
        android:layout_below="@id/head"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/clr"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/line"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="30dp"/>
    <View
        android:id="@+id/lin"
        android:layout_below="@id/name"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/clr"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/mon"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_below="@id/lin"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg"
        android:backgroundTint="#3A3A3A"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/owerl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/owe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/owetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/owe"
                    android:text="your owe"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_toEndOf="@id/owerl"
                android:layout_marginStart="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="your lent"
                    android:textSize="25dp"
                    android:layout_below="@id/lent"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_below="@id/mon">
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/bg"
            android:backgroundTint="@color/clr">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/equal"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equal Split"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_toEndOf="@id/rl1"
            android:layout_marginStart="30dp"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/bg"
            android:backgroundTint="@color/clr">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/history"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>